<div class="container">

  <div class="col-sm-4 col-sm-offset-4">

    <h1><span class="fa fa-sign-in"></span> Signup</h1>



    <!-- SIGNUP FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" class="form-control" name="conPassword">
        </div>
       <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Dropdown button
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <!-- should make thse inputs or something -->
                <a class="dropdown-item" href="#">Home Inspector</a>
                <a class="dropdown-item" href="#">Home Owner</a>
            </div>
        </div>
        <div class="well">
            <p>By signing up, I agree to the Privacy Policy and the Terms of Services.<p>
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

  </div>

</div>
